<h2> Movie details</h2>


<h2>{{movie.title}}</h2>
<p>Genre: {{movie.genre}}</p>
<p>Plot: {{movie.plot}}</p>
<p>Cast: 
    {{#each movie.cast}}
    <p>{{this.name}}, {{this.occupation}}, {{this.catchPhrase}}</p>
    {{/each}}
</p>

<a href= "/movies/{{movie._id}}/edit">Edit</a>
<form action="/movies/{{movie._id}}/delete" method="post">
<button type="submit">Delete movie</button>
</form>
<br>

<a href="/movies">Back To All Movies</a>

{{#if success}}
  <div class="flash-message success">
    {{#each success}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}


{{#if error}}
  <div class="flash-message error">
    {{#each error}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}