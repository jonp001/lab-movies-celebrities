<h1> Sign Up Now!</h1>

<form action="/signup" method="POST">
<div>
    Username: 
    <input type="text" name="username">
</div>

<div> 
    Email: 
    <input type="email" name="email">
</div>

<div>
    Password: 
    <input type="password" name="password">
</div>


<button>Submit</button>
</form>

{{#if success}}
  <div class="flash-message success">
    {{#each success}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}


{{#if error}}
  <div class="flash-message error">
    {{#each error}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}