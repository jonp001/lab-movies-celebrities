<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

  <a href="/signup">Signup</a>
        {{#if theUserObject}}
        <form style="display:inline" action="/logout" method="POST"><button>Logout</button></form>
        {{else}}
        <a href="/login">Login</a>
        {{/if}}
<br>
<a href="/celebrities/create"> Create new celebrity</a>
<br>
<a href="/celebrities"> View all celebrities</a>
<br>
<a href="/movies/create"> Create new movie </a>
<br>
<a href="/movies"> View all movies</a>
<br>

{{#if success}}
  <div class="flash-message success">
    {{#each success}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}


{{#if error}}
  <div class="flash-message error">
    {{#each error}}
      <p>{{this}}</p>
    {{/each}}
  </div>
{{/if}}