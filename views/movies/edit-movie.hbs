<h2> Edit Movie Info</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
<label for="movieTitle">Title</label>
<input type="text" name="title" id="movieTitle" value="{{movie.title}}">
<br>

<label for="movieGenre">Genre</label>
<input type="text" name="genre" id="movieGenre" value="{{movie.genre}}">
<br>

<label for="moviePlots">Plot</label>
<input type="text" name="plot" id="moviePlot" value="{{movie.plot}}">
<br>

<label>Cast</label>
<select name="cast" multiple>
{{#each celebrities}}
<option value="{{this._id}}">{{this.name}}</option>"
{{/each}}

</select>

<button type="submit">Submit Changes</button>
</form>